<html>

<head>
    <title>
        <%=title%>
    </title>
    <script defer src="https://friconix.com/cdn/friconix.js">
    </script>
    <!-- link to our css file present in assets folder -->
    <link rel="stylesheet" href="/css/home.css">
</head>

<body>
    <!-- outer DIV -->

    <div class="outer-div">

        <!-- TODO CONTAINER -->

        <div class="todo-container">

            <!-- NAME OF APP -->
            <div class="heading">
                <h1>TODO App</h1>
            </div>


            <div class="add-task-button-form">


                <!-- ADD TASK FORM STARTS HERE -->


                <form action="/create-task" method="POST">

                    <!-- DESCRIPTION CONTAINER -->

                    <div class="description-conatiner">
                        <!-- description head -->
                        <div class="desc">
                            <h5>DESCRIPTION</h5>
                        </div>
                        <!-- actual description -->
                        <div class="desc-form">

                            <!-- input description -->

                            <input type="text" name="task_title" placeholder="What do you need to do?" class="input-feilds" required>

                        </div>

                    </div>

                    <!-- DETAILS CONTAINER -->

                    <div class="details-container">
                        <!-- category container -->
                        <div class="category-container">

                            <!-- category head -->
                            <div class="desc">
                                <h5>CATEGORY</h5>
                            </div>

                            <!-- actual category -->
                            <div class="desc-form">

                                <!-- select category -->

                                <select class="input-feilds" name="category" id="selection">
                                    <option value="" disabled selected hidden>Choose a category</option>
                                    <option value="Personal">Personal</option>
                                    <option value="Work">Work</option>
                                    <option value="School">School</option>
                                    <option value="Cleaning">Cleaning</option>
                                    <option value="Other">Other</option>
                                </select>

                            </div>
                        </div>

                        <!-- due-date container -->
                        <div class="due-date-container">

                            <!-- due date head -->
                            <div class="desc">
                                <h5>DUE DATE</h5>
                            </div>

                            <!-- actual due date -->
                            <div class="desc-form">
                                <!-- input due date -->

                                <input type="date" name="due_date" class="input-feilds">


                            </div>
                        </div>

                    </div>

                    <!-- ADD BUTTON CONTAINER -->
                    <div class="add-button-container">


                        <!-- add task button-->
                        <div class="add-button-div">

                            <button type="submit" id="add-task"><i class="fi-xwsuxl-plus-solid"></i>
                                    ADD TASK</button>

                        </div>


                    </div>
                </form>
            </div>


            <!-- CREATING THE TASK LIST -->
            <div class="Tasks">

                <UL>
                    <% for(let i of task_list){%>

                        <li class="single-class">
                            <div class="check-box">
                                <input type="checkbox" id="task-check" name="check-task" value="completed">
                            </div>
                            <div class="task-detail-container">
                                <div class="task-description">
                                    <p>
                                        <%=i.task_title %>
                                    </p>
                                </div>
                                <div class="task-due-date-container">
                                    <p>
                                        <%= i.due_date %>
                                    </p>
                                </div>
                            </div>
                            <div class="task-category-container">
                                <div>
                                    <h5>
                                        <%= i.category %>
                                    </h5>
                                </div>
                            </div>

                        </li>


                        <%}%>
                </UL>

            </div>


        </div>
    </div>







    <!-- js script added at bottom of body -->
    <script type="text/javascript" src="/js/home.js"></script>
</body>

</html>